<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html
    xml:lang="en"
    lang="en"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://purl.org/petal/1.0/"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:define-macro="layout">

    <head>
        <title metal:define-slot="title">CiderWebmail</title>
        <link rel="stylesheet" media="screen"  href="/base.css" />
        <script type="text/javascript" src="/ciderwebmail.js"></script>
    </head>
    <body>
        <div id="container">
            <div id="top">
                <h1>CiderWebmail</h1>
            </div>
            <div id="left">
                 <a tal:attributes="href uri_compose">Compose new mail</a>
                 <ul>
                     <div tal:repeat="folder folder_tree/folders" tal:omit-tag="">
                         <li metal:define-macro="folder-tree" tal:attributes="class folder/selected">
                             <a href="#" tal:attributes="href folder/uri_view"><span class="name" tal:content="folder/name"/> <span class="counts" tal:content="string: ${folder/unseen}/${folder/total}"/></a>
                             <ul tal:define="folders folder/folders" tal:condition="true:folders" tal:repeat="folder folders">
                                 <li metal:use-macro="#folder-tree">Dummy Child 1</li>
                             </ul>
                         </li>
                     </div>
                 </ul>
            </div>
            <div id="page">
                <div metal:define-slot="content" tal:omit-tag=""/>
            </div>
        </div>
    </body>
</html>

